<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bag">

    <android.support.v7.widget.CardView
        android:background="@color/bag"
        android:id="@+id/single_year_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bag">

            <ImageView
                android:id="@+id/single_year_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:scaleType="fitXY"
                android:contentDescription="@string/movie_name"/>

            <TextView
                android:id="@+id/single_year_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/single_year_image"
                android:text="@string/movie_name"
                android:textSize="18sp"

                android:textColor="@color/black" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>